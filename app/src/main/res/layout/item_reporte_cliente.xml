<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="6dp"
    card_view:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/txtNombreCliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre: Juan Pérez"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/txtPlacaCliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Placa: ABC123"
            android:textColor="@android:color/darker_gray"
            android:textSize="16sp"
            android:layout_marginBottom="2dp" />

        <TextView
            android:id="@+id/txtTipoVehiculoCliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo: Automóvil"
            android:textColor="@android:color/darker_gray"
            android:textSize="16sp"
            android:layout_marginBottom="2dp" />

        <TextView
            android:id="@+id/txtFechaIngresoCliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Último ingreso: 10/05/2025 14:30"
            android:textColor="@android:color/darker_gray"
            android:textSize="16sp"
            android:layout_marginBottom="2dp" />

        <TextView
            android:id="@+id/txtFechaSalidaCliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Última salida: 10/05/2025 17:00"
            android:textColor="@android:color/darker_gray"
            android:textSize="16sp"
            android:layout_marginBottom="2dp" />

        <TextView
            android:id="@+id/txtEstadoCliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Valor a pagar: $60.000"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="16sp"
            android:textStyle="italic" />
    </LinearLayout>
</androidx.cardview.widget.CardView>

